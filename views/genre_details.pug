extends layout

block content

  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    if genre_books.length
      dl
        each book in genre_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}
    else
      p This genre has no books.

  hr
  div(style='display: flex; align-items: center; gap: 20px; padding: 10px')
    p(style='background-color: #050505; padding: 20px; border-radius: 5px;')
      a(style='color: white')(href=genre.url+'/delete') Delete Genre
    p(style='background-color: #050505; padding: 20px; border-radius: 5px;')
      a(style='color: white')(href=genre.url+'/update') Update Genre